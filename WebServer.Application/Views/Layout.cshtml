<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
</head>
<body>
    <nav>
        <div>
			{{if(IsAuthenticated)}}
			{
				<ul>
					<li>
						<a href="/Home/Index">Home</a>
					</li>
					<li>
						<a href="/Users/Logout">Logout</a>
					</li>
				</ul>
			}
			{{else}}
			{
				<ul>
					<li>
						<a href="/Home/Index">Home</a>
					</li>
					<li>
						<a href="/Users/Login">Login</a>
					</li>
					<li>
						<a href="/Users/Register">Register</a>
					</li>
				</ul>
			}
			<hr />
        </div>
    </nav>
    <div>
        {{RenderBody}}
    </div>
</body>
</html>
<style>
	body{
		display:flex;
		flex-direction:column;
		justify-content:center;
		align-items:center;
	}
	nav{
		display:flex;
	}
	nav>div>ul{
		display:flex;
		flex-direction:row;
		gap:32px;
		list-style:none;
	}
	li>a{
		font-size:32px;
		text-decoration:none;
		color:black;
		font-weight:bold;
	}
</style>